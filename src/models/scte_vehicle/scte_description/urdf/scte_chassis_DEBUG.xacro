<?xml version='1.0'?>

<robot name="sctebot" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!--xacro:include filename="$(find scte_description)/urdf/scte.gazebo" /-->

    <!--naming this link world will fix the model in space-->

    <link name="base_link"/>

    <joint name="base_link" type="fixed">
        <origin xyz="0 0 1" rpy="0 0 0"/>
        <parent link="base_link"/>
        <child link="scte_chassis"/>
    </joint>

    <link name='scte_chassis'>
        <inertial>
            <mass value="10"/>
            <inertia
                    ixx="1" ixy="0" ixz="0"
                    iyy="1" iyz="0"
                    izz="1"
            />
        </inertial>
        <visual name='visual'>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size=".4 .2 .1"/>
            </geometry>
        </visual>
        <collision name='collision'>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size=".4 .2 .1"/>
            </geometry>
        </collision>
    </link>

    <link name='caster'>
        <inertial>
            <mass value="1"/>
            <inertia
                    ixx="0.1" ixy="0" ixz="0"
                    iyy="0.1" iyz="0"
                    izz="0.1"
            />
        </inertial>
        <visual name='visual'>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
        </visual>
        <collision name='collision'>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
        </collision>
    </link>

    <joint name="caster_JOIN_scte_chassis" type="fixed">
        <origin xyz="-0.15 0 -0.05" rpy="0 0 0"/>
        <parent link="scte_chassis"/>
        <child link="caster"/>
    </joint>

    <link name="right_wheel">
        <inertial>
            <mass value="0.5"/>
            <inertia
                    ixx="1" ixy="0" ixz="0"
                    iyy="1" iyz="0"
                    izz="1"
            />
        </inertial>
        <visual name="visual">
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
        </visual>
        <collision name='collision'>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
        </collision>
    </link>

    <joint name="right_wheel_JOIN_scte_chassis" type="continuous">
        <child link="right_wheel"/>
        <parent link="scte_chassis"/>
        <origin xyz="0.1 -0.15 0" rpy="0 1.5707 1.5707"/>
        <dynamics damping="0.7"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <inertial>
            <mass value="0.5"/>
            <inertia
                    ixx="1" ixy="0" ixz="0"
                    iyy="1" iyz="0"
                    izz="1"
            />
        </inertial>
        <visual name="visual">
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
        </visual>
        <collision name='collision'>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
        </collision>
    </link>

    <joint name="left_wheel_JOIN_scte_chassis" type="continuous">
        <child link="left_wheel"/>
        <parent link="scte_chassis"/>
        <origin xyz="0.1 0.15 0" rpy="0 1.5707 1.5707"/>
        <dynamics damping="0.7"/>
        <axis xyz="0 0 1"/>
    </joint>

    <!--transmission name="tran1">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="left_wheel_JOIN_scte_chassis">
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
        </joint>
        <actuator name="motor1">
            <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>
    </transmission-->

    <transmission name="tran_left" type="SimpleTransmission">
        <type>transmission_interface/SimpleTransmission</type>
        <actuator name="motor_left_wheel">
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>
        <joint name="left_wheel_JOIN_scte_chassis">
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
        </joint>
    </transmission>

    <!--transmission name="tran2">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="right_wheel_JOIN_scte_chassis">
            <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        </joint>
        <actuator name="motor2">
            <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>
    </transmission-->

    <transmission name="tran_right" type="SimpleTransmission">
        <type>transmission_interface/SimpleTransmission</type>
        <actuator name="motor_right_wheel">
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>
        <joint name="right_wheel_JOIN_scte_chassis">
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
        </joint>
    </transmission>

    <gazebo>
        <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
            <!--robotNamespace>$(arg robot_namespace)</robotNamespace-->
            <legacyModeNS>true</legacyModeNS>
        </plugin>
    </gazebo>

</robot>

