<launch>

    <arg name="robot_namespace" default="sctebot" />

    <!-- TODO use launching node to select which drivers get launched on either primary or raspi -->
    <arg name="launching_node" default="primary_node"/>

    <!--
        adafruit_10dof_imu
        yost_3space_ahrs
        witmotion_gps_ahrs
    -->
    <arg name="primary_imu" default="witmotion_gps_ahrs"/>
    <arg name="primary_gps" default="adafruit_ultimate_gps"/>

    <include file="$(find sctebot_description)/launch/sctebot_upload.launch">
        <arg name="robot_namespace" value="$(arg robot_namespace)"/>
        <arg name="spawn_gazebo" value="false"/>
        <arg name="enable_realsense_d435i_stereo_camera" default="true"/>
        <arg name="enable_ydlidar" default="true"/>
    </include>

    <include file="$(find sctebot_localization)/launch/sctebot_localization.launch">
        <arg name="robot_namespace" value="$(arg robot_namespace)"/>
        <arg name="primary_imu" value="$(arg primary_imu)"/>
        <arg name="primary_gps" value="$(arg primary_gps)"/>
    </include>

</launch>