<launch>

    <arg name="node_name" default="ros-pi-node"/>
    <arg name="robot_namespace" default="sctebot"/>

    <arg name="enable_ada_servo" default="true"/>

    <include file="$(find sctebot_control)/launch/sctebot_control.launch">
        <arg name="robot_namespace" value="$(arg robot_namespace)"/>
    </include>

    <group if="$(eval enable_ada_servo == true)">
        <include file="$(find adafruit_servo_hat)/launch/adafruit_servo_hat.launch">
            <arg name="i2c_bus_number" value="1"/>
        </include>
    </group>

</launch>