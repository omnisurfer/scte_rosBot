<launch>

    <!--
    https://github.com/husky/husky/blob/ea1c27f2b2e5e0f106c19aae65ec7bc5023dda64/husky_control/launch/teleop.launch
    -->
    <arg name="robot_namespace" default="/sctebot"/>
    <arg name="enable_stereo_cameras" default="0"/>
    <arg name="enable_g2_ydlidar" default="0"/>
    <arg name="enable_gpsd" default="0"/>
    <arg name="enable_d455" default="0"/>

    <group if="$(eval arg('enable_stereo_cameras') == 1)">
        <include file="$(find stereo_cameras)/launch/stereo_cameras.launch"/>
    </group>

    <group if="$(eval arg('enable_g2_ydlidar') == 1)">
        <group ns="$(arg robot_namespace)">
            <!--include file="$(find ydlidar_ros)/launch/G2.launch"/-->
            <node name="ydlidar_node"  pkg="ydlidar_ros"  type="ydlidar_node" output="screen" respawn="false" >
                <param name="port"         type="string" value="/dev/ydlidar"/>
                <param name="baudrate"         type="int" value="230400"/>
                <param name="frame_id"     type="string" value="laser_frame"/>
                <param name="resolution_fixed"    type="bool"   value="true"/>
                <param name="auto_reconnect"    type="bool"   value="true"/>
                <param name="reversion"    type="bool"   value="true"/>
                <param name="angle_min"    type="double" value="-180" />
                <param name="angle_max"    type="double" value="180" />
                <param name="range_min"    type="double" value="0.1" />
                <param name="range_max"    type="double" value="16.0" />
                <param name="ignore_array" type="string" value="" />
                <param name="frequency"    type="double" value="10"/>
                <param name="samp_rate"    type="int"    value="5"/>
            </node>
        </group>
    </group>

    <group if="$(eval arg('enable_gpsd') == 1)">
        <include file="$(find gpsd_gps)/launch/gpsd_gps.launch">
            <arg name="nodeName" value="ros-pi-node"/>
            <arg name="gpsName" value="adafruit_ultimate_gps"/>
        </include>
    </group>

    <group if="$(eval arg('enable_d455') == 1)">
        <include file="$(find realsense2_camera)/launch/rs_camera.launch">
            <arg name="camera" value="d455"/>
            <arg name="enable_accel" value="True"/>
            <arg name="enable_gyro" value="True"/>
            <arg name="unite_imu_method" value="linear_interpolation"/>
        </include>
    </group>

</launch>
