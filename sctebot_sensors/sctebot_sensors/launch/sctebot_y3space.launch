<launch>

    <arg name="node_name" default="yost_3space_ahrs"/>
    <arg name="robot_namespace" default="sctebot"/>

    <group ns="$(arg robot_namespace)">

        <node pkg="y3space_driver"
              name="$(arg node_name)"
              type="y3space_driver"
              output="screen">
            <rosparam command="load" file="$(find y3space_driver)/config/y3space.yaml" />
            <remap from="/imu/filtered" to="$(arg node_name)/imu/data"/>
            <remap from="/imu/temp" to="$(arg node_name)/imu/temp"/>
        </node>

    </group>

    <!-- IMU madgwick
        - refer to adafruit_10dof_imu.launch for notes/example implementation
    -->
    <!-- madgwick may not be needed since the y3 is an AHRS with its own filtering...
    <node pkg="imu_filter_madgwick" type="imu_filter_node" name="$(arg camera_name)_imu_filter_madgwick" output="screen" clear_params="true" respawn="false">
        <remap from="imu/data_raw" to="/$(arg robot_namespace)/$(arg camera_name)/imu/data_raw"/>
        <remap from="imu/data" to="/$(arg robot_namespace)/$(arg camera_name)/imu/data"/>
        <param name="fixed_frame" value="pal_odom" />
        <param name="world_frame" value="enu" />
        <param name="publish_tf" value="false" />
        <param name="orientation_stddev" value="0.05" />
        <param name="use_mag" value="false" />
        <param name="use_magnetic_field_msg" value="false" />
    </node>
    -->

</launch>