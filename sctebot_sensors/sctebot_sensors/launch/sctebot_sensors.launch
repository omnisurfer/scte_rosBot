<launch>

    <arg name="robot_namespace" default="sctebot"/>

    <group ns="$(arg robot_namespace)">
        <!-- Upload the vehicle model here for now -->
        <include file="$(find sctebot_description)/launch/upload.launch"/>

        <!-- Realsense Camera -->
        <arg name="camera_name" default="stereo_fwd"/>

        <remap from="/$(arg robot_namespace)/$(arg camera_name)/depth/color/points" to="points2"/>
        <remap from="/$(arg robot_namespace)/$(arg camera_name)/imu" to="imu/data_raw"/>

        <remap from="/$(arg robot_namespace)/$(arg camera_name)/infra1/image_rect_raw" to="left/image_raw"/>
        <remap from="/$(arg robot_namespace)/$(arg camera_name)/infra1/camera_info" to="left/camera_info"/>
        <remap from="/$(arg robot_namespace)/$(arg camera_name)/infra2/image_rect_raw" to="right/image_raw"/>
        <remap from="/$(arg robot_namespace)/$(arg camera_name)/infra2/camera_info" to="right/camera_info"/>

        <include file="$(find sctebot_sensors)/launch/sctebot_realsense.launch">
            <arg name="camera" value="$(arg camera_name)"/>
            <arg name="enable_pointcloud" value="true"/>
            <arg name="enable_depth" value="true"/>
            <arg name="enable_infra1" value="true"/>
            <arg name="enable_infra2" value="true"/>
            <arg name="enable_color" value="true"/>
            <arg name="enable_gyro" value="true"/>
            <arg name="enable_accel" value="true"/>
        </include>

        <!-- Pose from realsense IMU -->
        <!--http://wiki.ros.org/imu_filter_madgwick -->
        <!---->
        <node pkg="imu_filter_madgwick" type="imu_filter_node" name="realsense_imu_filter_madgwick" output="screen" clear_params="true" respawn="false">
            <remap from="imu/data_raw" to="/$(arg robot_namespace)/$(arg camera_name)/imu/data_raw"/>
            <remap from="imu/data" to="/$(arg robot_namespace)/$(arg camera_name)/imu/data"/>
            <param name="fixed_frame" value="pal_odom" />
            <param name="world_frame" value="enu" />
            <param name="publish_tf" value="false" />
            <param name="orientation_stddev" value="0.05" />
            <param name="use_mag" value="false" />
            <param name="use_magnetic_field_msg" value="false" />
        </node>
        <!---->

        <!-- YD Lidar -->
        <!---->
        <include file="$(find sctebot_sensors)/launch/sctebot_ydlidar_g2.launch">

        </include>
        <!---->

        <!-- GPS -->
        <!---->
        <include file="$(find gpsd_gps)/launch/gpsd_gps.launch">
            <arg name="gps_name" default="primary_gps"/>
            <arg name="node_name" default="local"/>
        </include>
        <!---->

        <!-- Adafruit 10DOF IMU -->
        <!---->
        <include file="$(find adafruit_10dof_imu)/launch/adafruit_10dof_imu.launch">

        </include>
        <!---->
    </group>

</launch>